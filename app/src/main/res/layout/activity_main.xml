<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TabHost
        android:id="@+id/tbhConversor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tabLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblDelongitud"
                        android:text="DE:"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lblAlongitud"
                        android:text="A:"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/spnDElongitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="60dp"
                        android:entries="@array/spnLongitud" />

                    <Spinner
                        android:id="@+id/spnAlongitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="120dp"
                        android:entries="@array/spnLongitud" />

                    <EditText
                        android:id="@+id/txtCantidadLongitud"
                        android:layout_below="@+id/spnAlongitud"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad a convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btnConvertirLongitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtCantidadLongitud"
                        android:layout_marginTop="40dp"
                        android:text="convertir" />

                </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tabVolumen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblDEVolumen"
                android:text="DE:"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lblAVolumen"
                android:text="A:"
                android:layout_below="@id/lblDEVolumen"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spnDEVolumen"
                android:entries="@array/spnVolumen"
                android:layout_alignBaseline="@id/lblDEVolumen"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/lblDEVolumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spnAVolumen"
                android:entries="@array/spnVolumen"
                android:layout_alignBaseline="@id/lblAVolumen"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/lblAVolumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/txtCantidadDeVolumen"
                        android:layout_below="@+id/spnAVolumen"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad a convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btnConvertirVolumen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtCantidadDeVolumen"
                        android:layout_marginTop="40dp"
                        android:text="convertir" />

            </RelativeLayout>

               <RelativeLayout
                    android:id="@+id/tabMasa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                   <TextView
                       android:id="@+id/lblDEMasa"
                       android:text="DE:"
                       android:layout_marginTop="60dp"
                       android:layout_marginLeft="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/lblAMasa"
                       android:text="A:"
                       android:layout_below="@id/lblDEMasa"
                       android:layout_marginTop="20dp"
                       android:layout_marginLeft="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <Spinner
                       android:id="@+id/spnDEMasa"
                       android:entries="@array/spnMasa"
                       android:layout_alignBaseline="@id/lblDEMasa"
                       android:layout_marginLeft="10dp"
                       android:layout_toRightOf="@id/lblDEMasa"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <Spinner
                       android:id="@+id/spnAMasa"
                       android:entries="@array/spnMasa"
                       android:layout_alignBaseline="@id/lblAMasa"
                       android:layout_marginLeft="10dp"
                       android:layout_toRightOf="@id/lblAMasa"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <EditText
                       android:id="@+id/txtCantidadDeMasa"
                       android:layout_below="@+id/spnAMasa"
                       android:layout_marginTop="40dp"
                       android:hint="Cantidad a convertir"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <Button
                       android:id="@+id/btnConvertirMasa"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/txtCantidadDeMasa"
                       android:layout_marginTop="40dp"
                       android:text="convertir" />

               </RelativeLayout>




            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>