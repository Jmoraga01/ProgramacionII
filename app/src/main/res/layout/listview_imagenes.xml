<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="150dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/imgFoto"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lblCodigoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="-140dp"
        android:layout_toStartOf="@+id/lblCodigo"
        android:text="CÃ³digo:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/lblCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:text="Codigo"
        android:textColor="@color/black"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/lblDescripcionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="-175dp"
        android:layout_below="@+id/lblCodigoLabel"
        android:layout_toStartOf="@+id/lblDescripcion"
        android:text="Descripcion:"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCodigo"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="14dp"
        android:text="Descripcion"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/lblMarcaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-130dp"
        android:layout_below="@+id/lblMarca"
        android:layout_toStartOf="@+id/lblMarca"
        android:text="Marca:"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/lblMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDescripcion"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="14dp"
        android:text="Marca"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/lblPrecioLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-130dp"
        android:layout_below="@+id/lblPrecio"
        android:layout_toStartOf="@+id/lblPrecio"
        android:text="Precio:"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMarca"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="14dp"
        android:text="Precio"
        android:textColor="@color/black" />

</RelativeLayout>